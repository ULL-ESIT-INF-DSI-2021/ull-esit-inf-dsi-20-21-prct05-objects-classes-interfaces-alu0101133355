{
    "exclude": [
        "./tests",
        "./node_modules",
        "./dist"
    ],
    "compilerOptions": {
        "target": "ES2020",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "module": "CommonJS",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    
    }
